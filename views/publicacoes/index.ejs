<%- include('../header') %>

<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Conteúdo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                    <% if(publicacoes.length) { %>
                        <% publicacoes.forEach(publicacao => { %>
                            <tr>
                                <td>
                                    <%= publicacao.titulo %>
                                </td>
                                <td>
                                    <%= publicacao.conteudo %>
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">Editar</a>
                                    <a class="btn btn-outline-danger" href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>">Excluir</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td class="text-center" colspan="3">Nenhuma publicação cadastrada para essa categoria.</td>
                        </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <a class="btn btn-dark" href="/categorias">Voltar</a>
</div>

<%- include('../footer') %>